<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/second_set"
        motion:constraintSetStart="@+id/first_set">
        <KeyFrameSet>
            <KeyPosition
                motion:framePosition="50"
                motion:motionTarget="@id/card_view"
                motion:percentX="0.85"
                motion:percentY="0.25" />
            <KeyPosition
                motion:framePosition="50"
                motion:motionTarget="@id/img_view"
                motion:percentX="0.85"
                motion:percentY="0.25" />
        </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@id/third_set"
        motion:constraintSetStart="@id/second_set"
        motion:duration="600">
        <KeyFrameSet>
            <KeyAttribute
                motion:framePosition="70"
                motion:motionTarget="@id/card_view">
                <CustomAttribute
                    motion:attributeName="radius"
                    motion:customDimension="160dp" />
            </KeyAttribute>
        </KeyFrameSet>
    </Transition>
    <Transition
        motion:constraintSetEnd="@id/fourth_set"
        motion:constraintSetStart="@id/third_set" />

    <ConstraintSet android:id="@+id/first_set">
        <Constraint android:id="@id/card_view">
            <Layout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent" />
            <CustomAttribute
                motion:attributeName="radius"
                motion:customDimension="24dp" />
        </Constraint>

        <Constraint android:id="@id/img_view">
            <Layout
                android:layout_width="32dp"
                android:layout_height="32dp"
                motion:layout_constraintBottom_toBottomOf="@id/card_view"
                motion:layout_constraintEnd_toEndOf="@id/card_view"
                motion:layout_constraintStart_toStartOf="@id/card_view"
                motion:layout_constraintTop_toTopOf="@id/card_view" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/second_set"
        motion:deriveConstraintsFrom="@id/first_set">
        <Constraint android:id="@id/card_view">
            <Layout
                android:layout_width="48dp"
                android:layout_height="48dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="@id/guideline1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/third_set"
        motion:deriveConstraintsFrom="@id/second_set">
        <Constraint android:id="@id/card_view">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="@id/guideline1" />
            <CustomAttribute
                motion:attributeName="radius"
                motion:customDimension="0dp" />
        </Constraint>

        <Constraint android:id="@id/img_view">
            <Layout
                android:layout_width="32dp"
                android:layout_height="32dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="@id/guideline2" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/fourth_set"
        motion:deriveConstraintsFrom="@id/third_set">

        <Constraint android:id="@id/img_view">
            <Layout
                android:layout_width="32dp"
                android:layout_height="32dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toEndOf="@id/img_view2"
                motion:layout_constraintTop_toTopOf="@id/guideline2" />
        </Constraint>

        <Constraint android:id="@id/img_view2">
            <Layout
                android:layout_width="32dp"
                android:layout_height="32dp"
                motion:layout_constraintEnd_toStartOf="@id/img_view"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="@id/img_view" />
            <PropertySet android:visibility="visible" />
        </Constraint>

        <Constraint android:id="@id/bg_view">
            <PropertySet android:visibility="visible" />
        </Constraint>
    </ConstraintSet>


</MotionScene>